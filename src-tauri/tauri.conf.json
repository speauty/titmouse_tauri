{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "titmouse",
  "version": "0.1.0",
  "identifier": "com.titmouse.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Titmouse",
        "width": 600,
        "height": 505,
        "resizable": false,
        "maximizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "plugins/whisper/*",
      "models/*"
    ]
  }
}
